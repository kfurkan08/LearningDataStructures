using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ArrayPractice
{
    class Program
    {
        
        static void Main(string[] args)
        {
            //Write a program in C# to store elements in an array and print it

            int[] elementStore = new int[10];

            Console.WriteLine("Please enter the 10 elements of the Array: ");
            for (int i = 0; i < elementStore.Length; i++)
            {
                elementStore[i] = int.Parse(Console.ReadLine());
            }
            Print();
            Console.ReadKey();

            void Print()
            {
                Console.WriteLine("\n you added the following Array");

                for (int i = 0; i < elementStore.Length; i++)
                {
                    Console.Write(elementStore[i] + " ");
                }
            }
        }
    }
 }
